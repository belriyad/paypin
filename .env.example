# PayPing Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
# Get these from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
VITE_STRIPE_SECRET_KEY=sk_test_your-secret-key

# Stripe webhook endpoint secret (for production)
VITE_STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# SENDGRID EMAIL CONFIGURATION
# ==============================================
# Get API key from https://app.sendgrid.com/settings/api_keys
VITE_SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Verified sender email (must be verified in SendGrid)
VITE_SENDGRID_FROM_EMAIL=noreply@yourdomain.com
VITE_SENDGRID_FROM_NAME=PayPing

# SendGrid template IDs (optional)
VITE_SENDGRID_TEMPLATE_PAYMENT_CONFIRMATION=d-template-id
VITE_SENDGRID_TEMPLATE_PAYMENT_REMINDER=d-template-id
VITE_SENDGRID_TEMPLATE_INVOICE=d-template-id

# ==============================================
# EMAILJS CONFIGURATION (Fallback)
# ==============================================
# Get these from https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your-service-id
VITE_EMAILJS_TEMPLATE_ID=your-template-id
VITE_EMAILJS_PUBLIC_KEY=your-public-key

# ==============================================
# ERROR MONITORING
# ==============================================
# External error monitoring endpoint (Sentry, LogRocket, etc.)
VITE_ERROR_MONITORING_ENDPOINT=https://your-monitoring-service.com/api/errors

# Sentry DSN (if using Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================
# Google Analytics 4 measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Application version (automatically set during build)
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_APP_ENV=development

# API base URL (for future backend integration)
VITE_API_BASE_URL=https://api.payping.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT secret for token validation (backend use)
JWT_SECRET=your-jwt-secret-key

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
# Company information for invoices and emails
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_ADDRESS=123 Business St, City, State 12345
VITE_COMPANY_PHONE=+1-555-123-4567
VITE_COMPANY_EMAIL=contact@yourcompany.com
VITE_COMPANY_WEBSITE=https://yourcompany.com

# Default currency and locale
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_LOCALE=en-US

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features for different environments
VITE_FEATURE_SUBSCRIPTIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_MULTI_USER=false
VITE_FEATURE_API_ACCESS=false

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================
# Twilio (for SMS notifications)
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Zapier webhook URL (for automation)
VITE_ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-id

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Development server configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_OPEN_BROWSER=true

# Enable development features
VITE_DEV_MOCK_PAYMENTS=true
VITE_DEV_SHOW_AUDIT_LOGS=true
VITE_DEV_ENABLE_ANALYTICS=false
